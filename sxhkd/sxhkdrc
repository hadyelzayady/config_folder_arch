XF86Audio{Prev,Play,Next,LowerVolume,RaiseVolume}
	playerctl --all-players {previous,play-pause,next}

XF86Audio{LowerVolume,RaiseVolume,Mute}
	amixer set 'Master'  {1%-,1%+,toggle}

ctrl + shift + s
	flameshot

XF86MonBrightness{Down,Up}
	light -{U,A} 2%

super +{ F2,F3}
	light -{U,A} 2%

super + {w,o,e,u}
	{$BROWSER,$FILE,$TERMINAL ranger,$TERMINAL calcurse}

super + shift + BackSpace
	prompt "Reboot computer?" "sudo -A shutdown -r now"

super + shift + q
	prompt "Exit DWM ?" "killall dwm"

super + shift + x
	prompt "Shutdown computer?" "sudo -A shutdown -h now"

super + shift + z
	suspend_menu

super + Print
	dmenurecord

super + Delete
	dmenurecord kill

super + shift + {m,s}
	{dmenumount,flameshot gui}

super + F12
	networkmanager_dmenu	

super + F4
	displayselect

alt + grave
	copyq toggle

alt + ctrl + l
	lockscreen

super + {bracketleft,bracketright}
	transset-df {--dec,--inc} .08 -a
